<div class="container ">
    <div class="row justify-content-center login-margin">
        <div class="col-10 big-top-border pb-4">
            <div class="row justify-content-center my-4">
                <h1 class="font-header">Register</h1>
            </div>
            <form action="" method="post">
                <div class="col-8 py-3 mx-auto">
                    <% if (notification == true) { %>
                        <div class="alert alert-danger">
                            <b>
                                Email Sudah Terekam Silahkan Masukkan Email lainnya
                            </b>
                        </div>
                    <% } %>
                    <div class="row mt-4">
                        <div class="col-6">
                            <b><label for="namaDepan">Nama Depan</label></b>
                        </div>
                        <div class="col">
                            <b><label for="namaBelakang">Nama Belakang</label></b>
                        </div>
                    </div>
                    <div class="row justify-content-center  ">
                        <div class="col-6">
                            <input type="text" class="form-control" id="namaDepan" name="namaDepan">
                        </div>
                        <div class="col">
                            <input type="text" class="form-control" id="namaBelakang" name="namaBelakang">
                        </div>
                    </div>
                    <div class="row  ">
                        <div class="col-6">
                            <b><label for="nik">NIK</label></b>
                        </div>
                    </div>
                    <div class="row justify-content-start  ">
                        <div class="col-6">
                            <input type="text" class="form-control" id="nik" name="nik">
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-6">
                            <b><label for="email">Email</label></b>
                        </div>
                    </div>
                    <div class="row justify-content-start ">
                        <div class="col-6">
                            <input type="email" class="form-control" id="email" name="email">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <b><label for="password">Password</label></b>
                        </div>
                        <div class="col">
                            <b><label for="konfirmasiPassword">Konfirmasi Password</label></b>
                            <sub id="error" class="text-danger"></sub>
                        </div>
                    </div>
                    <div class="row justify-content-center ">
                        <div class="col-6">
                            <input type="text" class="form-control" id="password" name="password" oninput="comparePassword()">
                        </div>
                        <div class="col">
                            <input type="text" class="form-control" id="konfirmasiPassword" oninput="comparePassword()">
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-6">
                            <button type="submit" class="btn-navbar px-4 py-2">Register</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>